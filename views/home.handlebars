<main class="container mt-5">
    <h1 class="mb-4">Honest Game Reviews!</h1>
    <div class="row">
        {{#if logged_in}}
        <div class="mb-4">
            <a class="btn btn-warning" href="/review">Add Review</a>
        </div>
        {{else}}
        <h1></h1>
        {{/if}}
        {{#each reviews as |review|}}
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h2 class="card-title">
                        <a href="/review/{{review.id}}">{{review.game_title}}</a>
                    </h2>
                </div>
                <div class="card-body">
                    <p>Created by: {{user.username}} Date: {{format_date createdAt}}</p>
                </div>
                <p class="px-3"><span class="ratingStars" style="--rating: {{review.rating}};"></span></p>
            </div>
        </div>
        {{/each}}
    </div>
</main>
 <script src="/js/review.js"></script>