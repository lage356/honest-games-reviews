<div>

  <h3>{{reviews.game_title}}</h3>
  <p>{{reviews.content}}</p>
  <h5>Posted by: {{reviews.user.username}}</h5>
  <h5>Date posted: {{format_date reviews.createdAt}}</h5>

</div>


{{#if logged_in}}
<form class="newcommentform">
  <div class="card-body mt-3">
    <h3 class="card-title">Comments Section</h3>
    <div class="mb-3">
      <label for="commentContent" class="form-label"></label>
      <textarea class="form-control" id="commentContent" rows="3" placeholder="Enter your comment"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
  </div>
  </div>
  </div>
</form>
{{else}}
<h3>Comments</h3>
{{/if}}

<script src="/js/new-comment.js"></script>